mixin pagination(pagination)
     nav
        ul(class="pagination")
            if(pagination.currentPage > 1)
                li(class="page-item")
                    button(button-pagination=pagination.currentPage-1 class="page-link") Previous
            div  
            - for (var i = 1; i<= pagination.totalPage; i++)
                li(class=`page-item ${pagination.currentPage == i ?"active":""}`)
                    button(button-pagination=i class="page-link active") #{i}
            if(pagination.currentPage < pagination.totalPage)
                li(class="page-item")
                    button(button-pagination=pagination.currentPage+1 class="page-link") Next